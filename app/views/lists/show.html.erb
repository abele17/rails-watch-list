<div class="container mt-4">
    <!-- Header Section -->
    <div class="mb-5">
        <h1><%= @list.name %></h1>
        <div class="d-flex justify-content-between align-items-center">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><%= link_to "My Lists", lists_path %></li>
                    <li class="breadcrumb-item"><%= link_to "New list", new_list_path %></li>
                </ol>
            </nav>
            <button class="btn btn-success"><%= @list.movies.count %> movie(s)</button>
        </div>
    </div>

    <!-- Movies Section -->
    <div class="row row-cols-1 row-cols-md-2 g-4">
        <!-- Movie Card 1 -->
        <div class="col">
            <div class="card">
                <img src="" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">The Godfather - 8.7 <i class="fas fa-star"></i></h5>
                    <p class="card-text">Spanning the years 1945 to 1955, a chronicle of the fictional Italian-American Corleone crime family...</p>
                    <p class="small text-muted">Best Al Pacino movie!</p>
                    <button class="btn btn-outline-danger"><i class="fas fa-trash"></i> Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Movie Button -->
    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
        <button class="btn btn-primary me-md-2" type="button">Add a movie</button>
    </div>
</div>

<div class="container">
  <% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(movie_id: movie.id, list_id: @list.id) %>
  <p><%= movie.title %>
  <img src="<%= movie.poster_url %>">
  <%= link_to "delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></p>
<% end %>
 <%= link_to "add a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>
